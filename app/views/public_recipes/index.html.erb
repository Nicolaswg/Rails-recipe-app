<div class="index flex-col">
<h1>Public recipes</h1>
<% @recipe.each do |recipe|%>
	<div class="recipe flex-row">
		<div class="recipe-header">
			<p><%= link_to recipe.name, user_recipe_path(recipe.user.id, recipe.id)%></p>
			<p>By: <%= recipe.user.name%></p>
		</div>
		<div class="food-header">
			<p>Total food items: <%= recipe.amount_of_food %></p>
			<p>Total price: <%= recipe.total%>$</p>
		</div>
	</div>
<%end%>
</div>

