<div class="index flex-col">
	<h2 class='title'>Shopping List</h2>
	<div class="flex-row shop-content">
  	<p>Amount of food items to buy: <%= @total_items %> Unit</p>
  	<p>Total value of food nested: <%= @total_value %>$</p>
	</div>
	
	<table class="table-container">
		<tr>
			<th>Food</th>
    	<th>Quantity</th>
    	<th>Price</th>
  	</tr>
  	<%@recipe_foods.each do |item|%>
  	<tr>
    	<td><%=item.food.name%></td>
    	<td><%=item.quantity%> <%= item.food.measurement_unit%></td>
    	<td><%=item.food.price * item.quantity%>$</td>
  	</tr>
  	<%end%>
	</table>
</div>