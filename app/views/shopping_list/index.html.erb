<h1 class='title'>Shopping List</h1>
<div class="flex container">
  <div>Amount of food items to buy: <%= @total_items %></div>
  <div>Total value of food nested: <%= @total_value %></div>
</div>

<div class="index flex-col">
  <table class="food-container">
  <tr>
    <th>Food</th>
    <th>Quantity</th>
    <th>Price</th>
  </tr>
  
  <%@recipe_foods.each do |item|%>
  <tr>
    <td><%=item.food.name%></td>
    <td><%=item.quantity%> <%= item.food.measurement_unit%></td>
    <td><%=item.food.price * item.quantity%>$</td>
  </tr>
  <%end%>
</table>
</div>